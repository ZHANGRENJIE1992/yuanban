.user_views {
  display: flex;
  flex-direction: column;
}


.user_xuanxiang_list_view {
  flex-direction: row;
  margin: 20rpx 20rpx 20rpx 20rpx;
  vertical-align: middle;
}

.user_xuanxiang_list_view image {
  width: 30rpx;
  height: 30rpx;
  vertical-align: middle;
}

.user_order_view_text {
  vertical-align: middle;
  font-size: 30rpx;
  font-weight: 403;
}

.user_order_all {
  display: table;
  flex-direction: row;
  float: right;
}

.user_order_all text {
  /* display: table-cell; */
  vertical-align: middle;
  color: #999;
  font-size: 28rpx;
}

.user_order_all image {
  vertical-align: middle;
}

.fengexian {
  border-bottom: 8px solid #ededed;
}

.tools_list {
  display: flex;
  flex-direction: row;
  margin-top: 20rpx;
  font-size: 50rpx;
  font-weight: 100;
  justify-content: center;
}

.tools_list view {
  display: flex;
  flex-direction: column;
  /* margin: 19rpx; */
  align-items: center;
  border: 1px solid #ededed;
  padding: 50rpx;
  margin-left: 15rpx;
  margin-right: 15rpx;
}

.tools_list view image {
  width: 600rpx;
  height: 150rpx;
  margin-bottom: 10rpx;
}

.zx {
  border-left: 5px solid #03f;
  margin-right: 10rpx;
  border-radius: 100rpx;
}

.tools_list text {
  font-size: 27rpx;
  align-items: center;
}

.user_view_touxiang_view_signature {
  font-size: 25rpx;
  margin-left: 70rpx;
  margin-right: 70rpx;
  color: #fff;
  display: block;
  display: -webkit-box;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  text-overflow: ellipsis;
}
.mail_view{
  align-items:center;
position:absolute;
justify-content:center;
font-size:28rpx;
margin-top:20rpx;
z-index:10000;
right:0%;

}
.mail_views{
  width: 33rpx;
  height: 33rpx;
  margin-left: 10rpx;
  vertical-align: middle;
}